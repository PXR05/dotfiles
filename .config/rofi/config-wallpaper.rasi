@import "~/.config/rofi/config.rasi" 

configuration {
  modi: "drun";
}

window {
  width: 60%;
}

imagebox {
  orientation: vertical;
  children:
    [ "entry", "listbox"];
}

entry {
  placeholder: "Search Wallpaper";
}

listview {
  columns: 4;
  lines: 3;
}

element {
  orientation: vertical;
  padding: 8px;
  spacing: 8px;
  border-radius: 8px;
	children: [element-icon, element-text];
}

element-icon {
  size: 20%;
}

